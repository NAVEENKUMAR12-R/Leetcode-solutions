class Solution {
public:
    bool isPowerOfTwo( int n) {
        if(n==1)
            {
                return true;
            }
            else if(n==536870912)
            {
                return true;
            }
        else if(n>0)
        {
           long double i=log(n)/log(2);
            return i==trunc(i);
        }

        return 0;
          }
};
